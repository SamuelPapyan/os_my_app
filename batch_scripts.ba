ex_18.bat 
 
 
@echo off

setlocal

set file=%1

:moveback
set directory=
for %%i in (%CD%) do (
    set directory=%%i
)
set file = %CD%\%1

if %directory% == C:\ (
    goto :badend
)

if exist %file% (
    echo File is in %directory%
